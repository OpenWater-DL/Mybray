<h2>Search Title</h2>
<form action="/books" method="GET">

<div>
    <label for="">Name</label>
<input type="text" name="title" value="<%= keywords.title %>">
</div>

<div>
    <label for="">Published after</label>
    <input type="date" name="publishedAfter" value="<%= keywords.publishedAfter %>" >
</div>

<div>
    <label for="">Published before</label>
    <input type="date" name="publishedBefore" value="<%= keywords.publishedBefore %>" >
</div>

<button type="submit">Search</button>

</form>

<br>

<div>

<% books.forEach( book => {%>

    <div> <%= book.title %></div>
    <img height="150" width="100" src="<%= book.coverImagePath%>" alt="">
<% }) %>

</div>