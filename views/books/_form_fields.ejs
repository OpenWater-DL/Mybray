<div>
<label for="">Title</label>
<input type="text" name="title" id="" value="<%= book.title%>"> 
<!-- author.name的源头是 authorSchema -->
</div>

<div>
<label for="">Author</label>

<select name="author" id="">
<% authors.forEach(author => { %>

    <!-- 在models里，book.author的类型其实就是ID -->
    <% if(author.id === book.author){%>

        <!-- 为啥这里可以这样写就能表示选中啊？ 这里指的应该是一个默认值? 如果之后传入了book.author -->
    <option selected label="<%= author.name%>" value="<%= author.id %>" style="color: blue;">
<% }else { %>
    <option  label=" <%= author.name%>" value="<%= author.id %>" style="color: green;">

<% } %>
<%} )%>

</select>
</div>

<div>

<label>Publish Date</label>
<input type="date" name="publishDate" id="" value=" <%= book.publishDate == null? '' : 

book.publishDate.toISOString().split('T')[0]  %>">
</div>

<div>

    <label>Page count</label>
    <input type="number" name="pageCount" id="" min="1" value=" <%= book.pageCount %>">
    </div>


<br>
<div>

    <label>Page cover</label>
    <input type="file" name="coverImage" >
    </div>

<br>
<div>

    <label>Description
    </label>
    <textarea name="Description" id=""> <%=  book.Description %> </textarea>
    </div>